{
  "additionalReviewers": [
    "bchew",
    "xiaofan2406"
  ],
  "branchPrefix": "renovate-",
  "constraints": {
    "npm": "10.8.2"
  },
  "extends": [
    "config:recommended",
    "docker:disable",
    ":disableDigestUpdates",
    ":npm",
    ":semanticCommits"
  ],
  "labels": [
    "dependencies"
  ],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "matchPackageNames": [
        "node",
        "npm"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "@commitlint/**",
        "chai",
        "husky",
        "lint-staged",
        "mocha",
        "nodemon",
        "nyc",
        "prettier",
        "sinon*",
        "stylelint*",
        "supertest"
      ],
      "groupName": "devDeps"
    },
    {
      "matchPackageNames": [
        "@axe-core/**",
        "@wdio/**",
        "allure-commandline",
        "axe-html-reporter",
        "otpauth",
        "webdriverio"
      ],
      "groupName": "e2e"
    },
    {
      "matchPackageNames": [
        "axios*"
      ],
      "groupName": "axios"
    },
    {
      "matchPackageNames": [
        "dd-trace",
        "@datadog/**"
      ],
      "groupName": "datadog"
    },
    {
      "matchPackageNames": [
        "draft-js",
        "@draft-js/**"
      ],
      "groupName": "draft-js"
    },
    {
      "matchPackageNames": [
        "eslint*"
      ],
      "groupName": "eslint"
    },
    {
      "matchPackageNames": [
        "body-parser",
        "express*",
        "serve-static"
      ],
      "groupName": "express"
    },
    {
      "matchPackageNames": [
        "jest*"
      ],
      "groupName": "jest"
    },
    {
      "matchPackageNames": [
        "moment*"
      ],
      "groupName": "moment"
    },
    {
      "matchPackageNames": [
        "pg*"
      ],
      "groupName": "pg"
    },
    {
      "matchPackageNames": [
        "pino*"
      ],
      "groupName": "pino"
    },
    {
      "matchPackageNames": [
        "postcss*"
      ],
      "groupName": "postcss"
    },
    {
      "matchPackageNames": [
        "redux*"
      ],
      "groupName": "redux"
    },
    {
      "matchPackageNames": [
        "rollup*"
      ],
      "groupName": "rollup"
    },
    {
      "matchPackageNames": [
        "@testing-library/**"
      ],
      "groupName": "testing-library"
    },
    {
      "matchPackageNames": [
        "@types/**",
        "typescript"
      ],
      "groupName": "typescript"
    },
    {
      "matchPackageNames": [
        "webpack*"
      ],
      "groupName": "webpack"
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "rollbackPrs": true,
  "schedule": [
    "after 4:00 am on Friday on the 1st through 7th day of the month every 3 month"
  ],
  "timezone": "Australia/Melbourne",
  "vulnerabilityAlerts": {
    "enabled": true,
    "rangeStrategy": "bump"
  }
}
