{
  "additionalReviewers": ["bchew", "xiaofan2406"],
  "branchPrefix": "renovate-",
  "extends": ["config:base", ":onlyNpm"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["redux"],
      "groupName": "redux"
    },
    {
      "matchPackagePatterns": ["webpack"],
      "groupName": "webpack"
    },
    {
      "matchPackagePatterns": ["rollup"],
      "groupName": "rollup"
    },
    {
      "matchPackagePatterns": ["@testing-library"],
      "groupName": "@testing-library"
    },
    {
      "matchPackagePatterns": ["@types", "typescript"],
      "groupName": "typescript"
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "rollbackPrs": true,
  "schedule": [
    "after 4:00 am on Friday on the 1st through 7th day of the month every 1 month"
  ],
  "timezone": "Australia/Melbourne"
}
